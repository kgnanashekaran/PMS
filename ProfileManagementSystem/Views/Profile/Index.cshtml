<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    @*<meta http-equiv="X-UA-Compatible" content="IE=edge">*@
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    @*<link href="~/Content/toastr.css" rel="stylesheet" />*@
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    @*<meta name="viewport" content="width=device-width" />*@

    <title>Index</title>

    @*<style>

            #tblDisplayProfiles_filter {
                padding-right: 52px;
            }
        </style>*@

</head>

<body>

    <div class="">

        <div class="clearfix"></div>

        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12" style="padding-left:100px; padding-right:100px;">

                <div class="x_panel">

                    <div class="x_content">

                        <div class="page-title">

                            <div class="title_left">

                                <h3>

                                    <i class="fa fa-th-large main_icon" style="padding-left:5px;"></i>

                                    <span id="PageTitle">Profile management</span>

                                </h3>

                            </div>

                        </div>

                        <br />

                        <form id="form-input" class="form-horizontal" style="padding-top:50px;">

                            @Html.AntiForgeryToken()
                            <br>
                            <div class="form-group">
                                <label class="control-label col-md-4 col-sm-4 col-xs-12" for="txtFirstName">
                                    First Name <span class="required" style="color: red;">*</span>
                                </label>

                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <input type="text" id="txtFirstName" maxlength="100" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>

                            <br>

                            <div class="form-group">
                                <label class="control-label col-md-4 col-sm-4 col-xs-12" for="txtLastName">
                                    Last Name
                                </label>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <input type="text" id="txtLastName" maxlength="100" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>

                            <br>

                            <div class="form-group">
                                <label class="control-label col-md-4 col-sm-4 col-xs-12" for="txtUserEmail">
                                    Email <span class="required" style="color: red;">*</span>
                                </label>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <input type="text" id="txtUserEmail" maxlength="100" class="form-control col-md-7 col-xs-12">
                                </div>
                                <div id="msgUserEmail" style="color:red"></div>
                            </div>

                            <br>

                            <div class="form-group">
                                <label class="control-label col-md-4 col-sm-4 col-xs-12" for="txtDesignation">
                                    Designation <span class="required" style="color: red;">*</span>
                                </label>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <input type="text" id="txtDesignation" maxlength="100" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>

                            <br>

                            <div class="form-group">
                                <label class="control-label col-md-4 col-sm-4 col-xs-12" for="txtEmpCode">
                                    Employee Code <span class="required" style="color: red;">*</span>
                                </label>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <input type="text" id="txtEmpCode" maxlength="100" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>

                            <br>

                            <div class="form-group row">
                                <label class="control-label col-md-4 col-sm-4 col-xs-12" for="select_Role">
                                    Role <span style="color: red;">*</span>
                                </label>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <select name="Role" id="select_Role" class="form-control col-md-7 col-xs-12">
                                        <option value="User">User</option>
                                        <option value="Administrator">Administrator</option>
                                    </select>
                                </div>
                                <div style="padding-bottom: 1px;">&nbsp</div>
                            </div>
                            <div class="form-group" id="pass" style="display:none">
                                <br>
                                <label class="control-label col-md-4 col-sm-4 col-xs-12" for="txtPassword">
                                    Password <span class="required" style="color: red;">*</span>
                                </label>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <input type="password" id="txtPassword" maxlength="100" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <div class="form-group" id="conPass" style="display:none">
                                <br>
                                <label class="control-label col-md-4 col-sm-4 col-xs-12" for="ConTxtPassword">
                                    Confirm Password <span class="required" style="color: red;">*</span>
                                </label>
                                <div class="col-md-4 col-sm-4 col-xs-12">
                                    <input type="password" id="ConTxtPassword" maxlength="100" class="form-control col-md-7 col-xs-12">
                                </div>
                            </div>
                            <br>
                            <div class="form-group row">

                                <label class="control-label col-md-4 col-sm-4 col-xs-12" for="IsActive">

                                    Active <span style="color: red;">*</span>

                                </label>

                                <div class="col-md-4 col-sm-4 col-xs-12">

                                    <select id="IsActive" class="form-control m-b">
                                        <option value="Yes">Yes</option>
                                        <option value="No">No</option>
                                    </select>

                                </div>

                            </div>
                            <br>
                            <div class="form-group row">

                                <label class="control-label col-md-4 col-sm-4 col-xs-12" for="isDisplay">

                                    Display <span style="color: red;">*</span>

                                </label>

                                <div class="col-md-4 col-sm-4 col-xs-12">

                                    <select id="isDisplay" class="form-control m-b">
                                        <option value="Yes">Yes</option>
                                        <option value="No">No</option>
                                    </select>

                                </div>

                            </div>
                            <br>

                            <div class="form-group row">

                                <label class="control-label col-md-4 col-sm-4 col-xs-12" for="idUpload">

                                    Picture <span style="color: red;">*</span>

                                </label>

                                <div class="col-md-4 col-sm-4 col-xs-12">

                                    <input type="file" id="idUpload" maxlength="100" class="form-control col-md-7 col-xs-12">

                                </div>

                            </div>
                            <br />

                            <div class="ln_solid"></div>

                            <div id="divbuttons" class="form-group row">

                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-5">
                                    <button type="button" id="btnSave" class=" btn btn-primary">Save</button>
                                    <button type="submit" id="btnUpdate" class="btn btn-primary" style="display:none">Update</button>
                                    <button type="button" id="btnClear" class=" btn btn-primary">Clear</button>
                                    <input type="hidden" id="editid">
                                </div>

                            </div>

                            <div class="form-group row">

                                <div class="control-group">

                                    @*<label class="Lablecolor">Data</label>*@

                                    <table id="tblDisplayProfiles"
                                           class="table table-striped table-bordered" cellspacing="0">

                                        <thead class="or-thead" style="background-color: #004b8d; color: white;">

                                            <tr>

                                                <th>First Name</th>
                                                <th>Last Name</th>
                                                <th>Email</th>
                                                <th>Designation</th>
                                                <th>Employee Code</th>
                                                <th>Role </th>
                                                <th>Active?</th>
                                                <th>Display in Portal?</th>
                                                <th>Action</th>

                                            </tr>

                                        </thead>

                                        <tbody id="tbldata" class="appendData"></tbody>

                                    </table>

                                </div>

                            </div>

                        </form>

                    </div>



                </div>

            </div>

        </div>

    </div>

    <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
                </div>
                <div class="modal-body">
                    <strong>Are you sure about deleting this item ?</strong>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btn_DeleteCancel" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                    <button type="button" id="btn_Delete_MenuMaster" class="btn btn-danger danger" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

</body>

</html>



<script>



    $(document).ready(function () {
        //$("#edit").val('');
        LoadProfileData();

    });
    $("#select_Role").change(function () {
        if ($("#select_Role").val() == 'Administrator') {
            //alert($("#editid").val());
            if ($("#editid").val() != 'editRec') {
                $("#pass").show();
                $("#conPass").show();
            }
        }
        if ($("#select_Role").val() == 'User') {
            $("#pass").hide();
            $("#conPass").hide();
        }
    });
    function LoadProfileData() {
        var htmlText = "";
        $.ajax({

            type: "POST",
            @*url: '@Url.Action("GetUserProfileList", "Profile")',*@
            url: "/Profile/GetProfileList",
            data: null,
            dataType: "json",
            success: function (msg) {
                $("#tblDisplayProfiles").DataTable().destroy();
                $("#tbldata").html("");
                $.each(msg, function (index, obj) {

                    var display = 'No';
                    if (obj.display == 1)
                        display = 'Yes';

                    var status = 'No';
                    if (obj.status == 1)
                        status = 'Yes';

                    htmlText += "<tr><td>" + obj.firstname + "</td><td>" + obj.lastname + "</td><td>" + obj.email + "</td><td>" + obj.designation + "</td><td>" + obj.empno + "</td><td>" + obj.role + "</td><td>" + status + "</td><td>" + display+  "</td><td><img class='edit' id='btneditMenuMaster'  style='cursor:pointer;' onclick='EditRecord(this)' title='Edit this record' src='../assets/images/others/edit.png')/></td></tr>";
                });
                $("#tbldata").html(htmlText);

                $("#tblDisplayProfiles").DataTable({

                    paging: true,

                    'bPaginate': true,

                    'iDisplayLength':10,

                    columnDefs: [

                        {orderable: false, "targets": [8]}
                    ],

                    "dom": 'T<"clear">lfrtip',

                     destroy: true,

                    "bDestroy": true,

                });
            },

            error: function (xhr, ajaxOptions, thrownError) {
                alert(thrownError)
            }

        });

    }

    function EditRecord(d) {
        var tr = $(d).parent().parent();
        var td = tr.find('td');

        $("#txtFirstName").val($(td[0]).html());
        $("#txtLastName").val($(td[1]).html());
        $("#txtUserEmail").val($(td[2]).html());
        $("#txtDesignation").val($(td[3]).html());
        $("#txtEmpCode").val($(td[4]).html());
        $("#select_Role").val($(td[5]).html());
        $("#IsActive").val($(td[6]).html());
        $("#isDisplay").val($(td[7]).html());
        $("#txtUserEmail").prop("readonly", true);
        $("#btnUpdate").show();
        $("#btnSave").hide();
        $("#editid").val('editRec');
        
    }
    $("#btnSave").click(function () {

        //Validations
        if ($('#select_Role option:selected').text() == 'Administrator') {
            if ($("#txtPassword").val() == '') {
                alert('Please provide a password !');
                return;
            }
            if ($("#ConTxtPassword").val() != $("#txtPassword").val()) {
                alert('Password and Confirm password should be same !');
                return;
            }
        }
        if ($("#txtUserEmail").val() == '') {
            alert('Please provide email !');
            return;
        }
        var expr = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
        if (!expr.test($("#txtUserEmail").val())) {
                alert('Invalid email');
        }

        var data = new FormData();
        var files = $("#idUpload").get(0).files;
        if (files.length > 0) {

            var fileSize = files[0].size / 1024;
            if (fileSize > 60) {
                alert('File size shold not be greater than 60 KB');
                return;
            }
          
            data.append("MyImages", files[0]);
            data.append("firstName", $("#txtFirstName").val());
            data.append("lastName", $("#txtLastName").val());
            data.append("email", $("#txtUserEmail").val());
            data.append("password", $("#txtPassword").val());
            data.append("confirmPassword", $("#ConTxtPassword").val());
            data.append("IsActive", $('#IsActive option:selected').text());
            data.append("isDisplay", $('#isDisplay option:selected').text());
            data.append("designation", $("#txtDesignation").val());
            data.append("empCode", $("#txtEmpCode").val());
            data.append("Role", $('#select_Role option:selected').text());
            //alert(files[0].name)
            $.ajax({
                url: "/Profile/UploadProfiles",
                type: "POST",
                processData: false,
                contentType: false,
                data: data,
                success: function (response) {
                    alert(response);
                    LoadProfileData();
                    clearAll();
                   // alert();
                    //code after success
                    //$("#txtImg").val(response);
                    //$("#imgPreview").attr('src', '/Upload/' + response);
                },
                error: function (er) {
                    alert(er);
                }
            });
        }
    });

    $("#btnUpdate").click(function () {
        var data = new FormData();
        var files = $("#idUpload").get(0).files;
        if (files.length > 0) {
            var fileSize = files[0].size / 1024;
            if (fileSize > 60) {
                alert('File size shold not be greater than 60 KB');
                return;
            }
        }
        data.append("MyImages", files[0]);
        data.append("firstName", $("#txtFirstName").val());
        data.append("lastName", $("#txtLastName").val());
        data.append("email", $("#txtUserEmail").val());
        data.append("password", $("#txtPassword").val());
        data.append("confirmPassword", $("#ConTxtPassword").val());
        data.append("IsActive", $('#IsActive option:selected').text());
        data.append("isDisplay", $('#isDisplay option:selected').text());
        data.append("designation", $("#txtDesignation").val());
        data.append("empCode", $("#txtEmpCode").val());
        data.append("Role", $('#select_Role option:selected').text());

        //if (files.length > 0) {
            //alert(files[0].name)
            $.ajax({
                url: "/Profile/UpdateProfile",
                type: "POST",
                processData: false,
                contentType: false,
                data: data,
                success: function (response) {
                    ShowStatusMsg(response);
                    showNotificationError(response);
                    //alert(response);
                    LoadProfileData();
                    clearAll();
                },
                error: function (er) {
                    alert(er);
                }
            });
        //}
    });   

    $("#btnClear").click(function () {
        clearAll();
    });

    function clearAll() {

        $("#txtFirstName").val('');
        $("#txtLastName").val('');
        $("#txtUserEmail").val('');
        $("#txtDesignation").val('');
        $("#txtEmpCode").val('');
        $("#select_Role").val('User');
        $("#IsActive").val('Yes');
        $("#isDisplay").val('Yes');
        $("#txtUserEmail").prop("readonly", false);
        $("#idUpload").val('');
        $("#txtPassword").val('');
        $("#ContxtPassword").val('');
        $("#pass").hide();
        $("#conPass").hide();
        $("#editid").val('');
        //$("#btnUpdate").show();
        //$("#btnSave").hide();
    }

    function ShowStatusMsg(msg) {
        debugger;
        setTimeout(function () {
            toastr.options = {
                closeButton: true,
                progressBar: true,
                showMethod: 'slideDown',
                timeOut: 3000
            };
            toastr.success(msg, 'Notification');
        }, 1300);

    }

    /////Validation Failure status............

    function showNotificationError(msg) {

        setTimeout(function () {

            toastr.options = {

                closeButton: true,

                progressBar: true,

                showMethod: 'slideDown',

                timeOut: 3000

            };

            toastr.error(msg, 'Notification');

        }, 1300);

    }
</script>