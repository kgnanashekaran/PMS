@using ProfileManagementSystem.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Himatsingka - Profile Management System";
}



<div class="scroller" id="divProfile">
    <ul>

        @{
            var _lstUserProfiles = ViewData["UserProfiles"] as List<profileUser>;
            for (int i = 0; i < _lstUserProfiles.Count; i += 4)
            {
                <li>
                    <div class="row col-12 profile-row" id="user-profiles">
                        @{ var items = _lstUserProfiles.Skip(i).Take(4).ToList();
                            foreach (var item in items)
                            {
                                var picname = item.photo + ".jpg";

                                <div class="col-sm-12 col-lg-6 col-xl-3">
                                    <div class="mb-3 profile-responsive card">
                                        <div class="dropdown-menu-header">
                                            <div class="dropdown-menu-header-inner bg-dark">
                                                <div class="menu-header-image opacity-2" style="background-image: url('../assets/images/avatars/abstract2.jpg');"></div>
                                                <div class="menu-header-content btn-pane-right">
                                                    <div class="avatar-icon-wrapper mr-3 avatar-icon-xl btn-hover-shine">
                                                        <div class="avatar-icon rounded"><img src="../assets/images/profiles/@picname" alt="@item.firstname @item.lastname" height="64px" width="64px"></div>
                                                    </div>
                                                    <div>
                                                        <h5 class="menu-header-title">@item.firstname @item.lastname</h5>
                                                        <h6 class="menu-header-subtitle1">Emp.No# @item.empno</h6>
                                                        <h6 class="menu-header-subtitle">@item.designation</h6>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            }
                        }
                    </div>
                </li>

            }
        }

    </ul>
</div>


<div class="scroller" id="divSOP">
    <ul>

        @{
            var _lstSOP = ViewData["SOP"] as List<SOP>;
            foreach (var item in _lstSOP)
            {
                var picname = item.filename + ".jpg";
                <li>
                    <div class="row col-12 profile-row" id="sops">
                        <div class="col-md-12" style="text-align:center">
                            <img src="../assets/images/SOP/@picname" />
                        </div>
                    </div>
                </li>
            }
        }
    </ul>
</div>

